{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "showOutput": "silent",
    "isWatching": true,
    "problemMatcher": "$tsc-watch",
    "tasks": [
        {
            "taskName": "build",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "scripts",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "serve",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "styles",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "views",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "build:dev",
			"isBuildCommand": true,
			"showOutput": "always"
        },
        {
            "taskName": "clean-dev",
            "isBuildCommand": true,
            "showOutput": "always"
        }
    ]
}